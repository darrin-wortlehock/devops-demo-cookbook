<?xml version="1.0" encoding="utf-8"?>
<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="78">
  <server artifactsdir="artifacts" commandRepositoryLocation="default" agentAutoRegisterKey="<%= @agent_autoregister_key %>" serverId="<%= @uuid %>" />
  <pipelines group="defaultGroup">
    <pipeline name="Cookbook">
      <materials>
        <git url="https://github.com/darrin-wortlehock/devops-demo-cookbook.git" />
      </materials>
      <stage name="Test">
        <jobs>
          <job name="runStyleTests">
            <tasks>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>bundle</arg>
                <arg>install</arg>
                <runif status="passed" />
              </exec>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>berks</arg>
                <arg>install</arg>
                <runif status="passed" />
              </exec>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>rake</arg>
                <arg>style</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
          <job name="runUnitTests">
            <tasks>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>bundle</arg>
                <arg>install</arg>
                <runif status="passed" />
              </exec>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>berks</arg>
                <arg>install</arg>
                <runif status="passed" />
              </exec>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>rake</arg>
                <arg>spec</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
          <job name="runIntegrationTests">
            <tasks>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>bundle</arg>
                <arg>install</arg>
                <runif status="passed" />
              </exec>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>berks</arg>
                <arg>install</arg>
                <runif status="passed" />
              </exec>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>rake</arg>
                <arg>integration</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="Deploy">
        <jobs>
          <job name="upload_cookbook">
            <tasks>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>bundle</arg>
                <arg>install</arg>
                <runif status="passed" />
              </exec>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>berks</arg>
                <arg>install</arg>
                <runif status="passed" />
              </exec>
              <exec command="/opt/chefdk/bin/chef">
                <arg>exec</arg>
                <arg>berks</arg>
                <arg>upload</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </pipelines>
</cruise>
